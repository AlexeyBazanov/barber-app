<%= bootstrap_form_with model: @order || Order.new, url: order_path, label_errors: false, inline_errors: true,
                        class: 'm-t-10 p-30', data: { aos: 'fade-left', 'aos-duration': '1200' } do |f| %>

  <div class="row">

    <div class="col-lg-12">
      <%= f.text_field :name, hide_label: true, placeholder: 'Имя' %>
    </div>

    <div class="col-lg-12">
      <%= f.text_area :contacts,
            hide_label: true,
            placeholder: 'Контакты для связи (сслыка на профиль vk, телефон или whatsapp, email и т.д.)',
            rows: 3
      %>
    </div>

    <div class="col-lg-12 d-flex m-t-20">
      <button type="submit" class="btn btn-md btn-block btn-danger-gradiant btn-arrow" data-disable-with="Отправка...">
        <span> Записаться на курс <i class="ti-arrow-right"></i></span>
      </button>
    </div>

  </div>

<% end %>