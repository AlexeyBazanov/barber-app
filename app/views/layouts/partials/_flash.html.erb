<script>

    <% flash.each do |key, message| %>

      $(document).ready(function () {
          console.log('<%= message %>');
          window.notie.alert({
            type: '<%= key == 'notice' ? 'success' : 'warning' %>',
            text: '<%= message %>',
            position: 'bottom'
          });
      });

    <% end %>

</script>