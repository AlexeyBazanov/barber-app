<%= render layout: 'devise/shared/wrapper', locals: { title: 'Зарегистрироваться', sub_title: 'на портале' } do %>
    <%= bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name),
                           html: { class: 'm-t-10 p-30'}, data: { aos: 'fade-left', 'aos-duration': '1200' } do |f| %>
        <div class="row">

          <div class="col-lg-12">
            <%= f.text_field :fname, autofocus: true, hide_label: true, placeholder: 'Имя', autocomplete: "fname" %>
          </div>

          <div class="col-lg-12">
            <%= f.text_field :lname, autofocus: true, hide_label: true, placeholder: 'Фамилия', autocomplete: "lname" %>
          </div>

          <div class="col-lg-12">
            <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: 'E-mail', autocomplete: "email" %>
          </div>

          <div class="col-lg-12">
            <%= f.password_field :password, autocomplete: "new-password", hide_label: true, placeholder: 'Пароль' %>
          </div>

          <div class="col-lg-12">
            <%= f.password_field :password_confirmation,  hide_label: true, placeholder: 'Пароль еще раз', autocomplete: "new-password" %>
          </div>

          <div class="actions col-lg-12 d-flex m-t-20">
            <button type="submit" class="btn btn-md btn-block btn-danger-gradiant btn-arrow" data-disable-with="Отправка...">
              <span> Зарегистрироваться <i class="ti-arrow-right"></i></span>
            </button>
          </div>
        </div>

    <% end %>
<% end %>
